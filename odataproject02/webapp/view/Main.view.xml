<mvc:View
    controllerName="com.ui.odataproject02.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<FlexBox >
							<Input id="mainTxtNome"  width="95%" placeholder="{i18n>mainTxtNome}" />
							<Button id="mainBtnShowTxtNome" text="Ok" press="onMainBtnShowTxtNome" />
						</FlexBox>

						<FlexBox >
							<Button id="mainBtnOData" text="Get OData" press="onMainBtnOData" />
							<Input id="mainLblTextService" />
					    </FlexBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
